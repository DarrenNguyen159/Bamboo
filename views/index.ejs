<!DOCTYPE html>
<html lang="vi">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/style/index.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    </head>
    <body>
    
    <div class="container-fluid">
        <div class="center">
            <h1 class="logo">Bamboo!</h1>
            <div class="enterInput">
                <div class="row">
                    <input class="roomIDInput" type="number" name="roomID" value="" placeholder="Enter Room ID">
                </div>
                
                <div class="row">
                    <button class="ButtonEnter">Enter</button>
                </div>
                <br />
                <div class="row">
                    <span class="centering">or</span>
                </div>
                <br />
                <div class="row">
                    <button class="ButtonEnter" onclick="createLobby()">Create a lobby</button>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <a href="#">Terms & Privacy</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script>
        var $jq = jQuery.noConflict();
        function createLobby(){
            $jq.ajax({
                type: 'GET',
                url: '/test',
                dataType: 'text',
                success: function(data) {
                    var lobbyJSON = $jq.parseJSON(data);
                    if (lobbyJSON == null) {
                        alert("Failed: Create a new lobby! Try again.");
                    }
                    else {
                        alert("You just create a new lobby");
                        window.location.href = "/lobby/"  + lobbyJSON.id;
                    }
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    // alert(xhr.status);
                    // alert(thrownError);
                }
            }) // End of AJAX
        }
    </script>

    </body>
</html>