    <h3>Hello <span id="username"></span></h3>

    <div class="container-fluid">
        <div class="center">
            <% Object.keys(room.players).forEach(function(key){ %>
                <p><%= key %>: <%= room.players[key].name %>, score: <%= room.players[key].score %> </p>
            <% }) %>
        </div>
    </div>


    <div class="container-fluid">
        <div class="center">
            <p id="timer"> </p>
        </div>
    </div>

    <div class="container-fluid">
        <div class="center">
            <h2>Status: <%= room.status%></h2>
